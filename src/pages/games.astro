---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Games">
  <main>
    <div class="header">
      <span class="text-gradient">Games</span>
    </div>
    <ul role="list" class="link-card-grid">
      <Card
        href="/games/minecraft"
        title="Minecraft Server"
        body="Mapcord Server ⛏️"
      />
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .header {
    margin: auto;
    width: 100%;
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    padding: 20px 0;
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
